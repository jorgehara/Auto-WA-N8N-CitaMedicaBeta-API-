# Variables de entorno para N8N-EvolutionAPI-CitaMedica

# Configuración del servidor
PORT=3000
NODE_ENV=development

# URLs de las APIs
CITAMEDICA_API_URL=http://localhost:4001/api
EVOLUTION_API_URL=http://localhost:8080
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Configuración de EvolutionAPI
EVOLUTION_API_KEY=your_evolution_api_key_here
EVOLUTION_INSTANCE_NAME=citamedica-bot
EVOLUTION_BASE_URL=http://localhost:8080

# Configuración de CitaMedicaBeta API
CITAMEDICA_BASE_URL=http://localhost:4001/api
CITAMEDICA_TIMEOUT=30000

# Configuración de webhooks
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_PATH=/webhook/whatsapp

# Configuración de logs
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Configuración de timezone
TIMEZONE=America/Argentina/Buenos_Aires

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de N8N
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Variables específicas del bot
BOT_NAME=Anita - Asistente Médica
BOT_WELCOME_MESSAGE=¡Hola! Soy Anita, tu asistente para citas médicas. ¿En qué puedo ayudarte hoy?
BOT_ERROR_MESSAGE=Lo siento, ha ocurrido un error. Por favor, intenta de nuevo en unos momentos.

# Configuración de la clínica
CLINIC_NAME=Clínica Médica
CLINIC_HOURS_START=08:00
CLINIC_HOURS_END=20:00
CLINIC_TIMEZONE=America/Argentina/Buenos_Aires